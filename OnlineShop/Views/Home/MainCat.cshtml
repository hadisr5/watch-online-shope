@using OnlineShop.Models
@{
    var db = new OnlineShopEntities();
    int id = Convert.ToInt16(ViewBag.id);
    var mainCat = db.MainCats.Find(id);
    Layout = "/views/shared/_Layout.cshtml";
}
<div class="wrapper">
    <!--Header Area Start-->
    @RenderPage("/views/shared/_Header2.cshtml")
    <!--Header Area End-->
    <!--Shop Area Start-->
    <div class="shop-area mb-70">
        <div class="container">
            <div class="row">

                <div class="col-lg-12">
                    <div class="shop-layout">
                        <!--Breadcrumb One Start-->
                        <ul class="catNav">
                            <li><a href="/">خانه</a></li>
                            <li class="active">@mainCat.title</li>
                        </ul>
                        @{
                            var cats = db.Categories.Where(r => r.MainCat == mainCat.id).ToList();
                        }
                        <!--Breadcrumb One End-->
                        <!--Grid & List View Start-->
                        <!--Grid & List View End-->
                        <!--Shop Product Start-->
                        <div class="shop-product">
                            <div id="myTabContent-2" class="tab-content">
                                <div id="grid" class="tab-pane fade show active">
                                    <div class="product-grid-view">
                                        <div class="row" id="productContainer">
                                            @{
                                                if (cats.Count != 0)
                                                {
                                                    foreach (var item in cats)
                                                    {
                                                        string tlt = item.title;
                                                        while (tlt.Contains(" "))
                                                        {
                                                            tlt = tlt.Replace(" ", "_");
                                                        }
                                                        <div class="col-md-3">
                                                            <div class="categories-img img-full mb-30">
                                                                <a href="/home/category/@item.id/@tlt"><img style="height:230px" src="@item.Img" alt="@item.title"></a>
                                                                <div class="categories-content">
                                                                    <h3>@item.title</h3>
                                                                    <h4>@db.CatProes.Where(r => r.categoryId == item.id).Count() محصول</h4>
                                                                </div>
                                                            </div>
                                                        </div>



                                                    }
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>
                                
                                <!--Pagination Start-->
                                @*<div class="product-pagination">
                                    <ul>
                                    <li class="active"><a href="#">1</a></li>
                                    <li><a href="#">2</a></li>
                                    <li><a href="#">3</a></li>
                                    <li><a href="#">4</a></li>
                                    <li><a href="#">5</a></li>
                                    <li><a href="#"><i class="fa fa-angle-double-right"></i></a></li>
                                    </ul>
                                    </div>*@
                                <!--Pagination End-->
                            </div>
                        </div>
                        <!--Shop Product End-->
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!--Shop Area End-->
    <!--Brand Area Start-->
    
    <!--Brand Area End-->
    <!--Footer Area Start-->
    @RenderPage("/views/shared/_Footer.cshtml")
