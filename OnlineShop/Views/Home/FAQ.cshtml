                                                    {
                                                        for (var i = 0; i < faqs.Count; i++)
                                                        {

                                                            if (i == 0)
                                                            {
                                                                <div class="card">
                                                                    <div class="card-header d-flex justify-content-between activestate">
                                                                        <a role="button" data-toggle="collapse" class="collapsed" href="#collapse_@(i)i" aria-expanded="false">@faqs[i].Question</a>
