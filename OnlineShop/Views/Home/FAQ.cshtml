@using OnlineShop.Models
@using CaptchaMvc.HtmlHelpers
@using System.Data.Entity
@using CaptchaMvc
@using System.Globalization
@model int?
@{
    var db = new OnlineShopEntities();
    Layout = "/views/shared/_Layout.cshtml";
    var faqs = db.Faqs.Where(f => f.IsActive == true && f.CategoryId == Model).OrderBy(f => f.priority).Include(p => p.FaqCategory).ToList();
    var faccategory = db.FaqCategories.Where(c => c.id == Model).FirstOrDefault();
}
@section CSS{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/4.2.0/css/ionicons.min.css" integrity="sha256-F3Xeb7IIFr1QsWD113kV2JXaEbjhsfpgrKkwZFGIA4E=" crossorigin="anonymous" />

    <style>
        .list-group-flush .list-group-item {
            background: #f3f6f9;
            color: #000;
        }

        .comments-add-col--content {
            min-height: 300px;
        }

        .mainpagepic {
            width: 100%
        }

        .comments-add-col--content p {
            float: none;
            padding: 5px 0
        }

        p {
            color: #000;
        }

        main.single-product .product {
            background: #fff !important;
        }

        .faq-search-wrap {
            padding: 50px 0 60px;
        }

            .faq-search-wrap .form-group .form-control,
            .faq-search-wrap .form-group .dd-handle {
                border-top-right-radius: .25rem;
                border-bottom-right-radius: .25rem;
            }

            .faq-search-wrap .form-group .input-group-append {
                position: absolute;
                right: 0;
                top: 0;
                bottom: 0;
                z-index: 10;
                pointer-events: none;
            }

                .faq-search-wrap .form-group .input-group-append .input-group-text {
                    background: transparent;
                    border: none;
                }

                    .faq-search-wrap .form-group .input-group-append .input-group-text .feather-icon > svg {
                        height: 18px;
                        width: 18px;
                    }

        .bg-teal-light-3 {
            background-color: #7fcdc1 !important;
        }

        .hk-row {
            display: -ms-flexbox;
            display: flex;
            -ms-flex-wrap: wrap;
            flex-wrap: wrap;
            margin-right: -10px;
            margin-left: -10px;
        }




        .list-group-item.active {
            background-color: #fbb03b;
            border-color: #fbb03b;
        }

        .accordion .card .card-header.activestate {
            border-width: 1px;
        }

        .accordion .card .card-header {
            padding: 0;
            border-width: 0;
        }

        .card.card-lg .card-header, .card.card-lg .card-footer {
            padding: .9rem 1.5rem;
        }

        .accordion > .card .card-header {
            margin-bottom: -1px;
        }

        .card .card-header {
            background: transparent;
            border: none;
        }

        .accordion.accordion-type-2 .card .card-header > a.collapsed {
            color: #324148;
        }

        .accordion .card:first-of-type .card-header:first-child > a {
            border-top-left-radius: calc(.25rem - 1px);
            border-top-right-radius: calc(.25rem - 1px);
        }

        .accordion.accordion-type-2 .card .card-header > a {
            background: transparent;
            color: #13a89e;
            padding-right: 0;
        }

        .accordion .card .card-header > a.collapsed {
            color: #324148;
            background: transparent;
        }

        .accordion .card .card-header > a {
            background: #00acf0;
            color: #fff;
            font-weight: 600;
            padding: .75rem 1.25rem;
            display: block;
            width: 100%;
            text-align: right;
            position: relative;
            -webkit-transition: all 0.2s ease-in-out;
            -moz-transition: all 0.2s ease-in-out;
            transition: all 0.2s ease-in-out;
            font-size: 15px;
        }

        li.list-group-item.d-flex.align-items-center {
            font-size: 15px;
            font-weight: bold;
        }


        .badge.badge-pill {
            border-radius: 50px;
        }

        .badge.badge-light {
            background: #eaecec;
            color: #324148;
        }

        .badge {
            font-weight: 500;
            border-radius: 4px;
            padding: 5px 7px;
            font-size: 72%;
            letter-spacing: 0.3px;
            vertical-align: middle;
            display: inline-block;
            text-align: center;
            text-transform: capitalize;
        }

        .ml-15 {
            margin-left: 15px !important;
        }

        .accordion.accordion-type-2 .card .card-header > a.collapsed:after {
            content: "\f158";
        }

        .accordion.accordion-type-2 .card .card-header > a::after {
            display: inline-block;
            font: normal normal normal 14px/1 'Ionicons';
            speak: none;
            text-transform: none;
            line-height: 1;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
            text-rendering: auto;
            position: absolute;
            content: "\f176";
            font-size: 21px;
            margin-right: 5px;
        }

        h6.card-header {
            color: #13a89e;
        }

        .accordion .card .card-body {
            color: #000;
            font-size: 14px;
        }

        .card .card-body {
            min-height: auto;
        }

        .card {
            margin-bottom: 5px;
            box-shadow: none;
        }

        .col-xl-8 > .card {
            border: 1px solid #d5dae0 !important;
        }

        h3.card-header.border-bottom-0 {
            margin-bottom: 0;
            color: #13a79e;
        }
        .accordion .card {
            background: #f2f2f2;
        }
        span.badge.badge-light.badge-pill.ml-15 {
            margin-right: 10px;
            border: none;
            background: #fff;
            padding: 5px 9px;
            text-align: center;
        }
    </style>
}
    

