@using OnlineShop.Models 
@{
    Layout = null;
    var db = new OnlineShopEntities();
    var LatestNews = db.Blog_post.OrderByDescending(r => r.id).Where(r => r.title != null).Take(10).ToList();
}
<!-- Trending News Start -->
<section class="trending-news">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="trending-news-inner">
                    <div class="title">
                        <strong>آخرین</strong> اخبار
                    </div>
                    <div id="trending-news-slider">
                        @{
                            if (LatestNews.Count != 0)
                            {
                                foreach (var item in LatestNews)
                                {
                                    <div class="item-single">
                                        <a href="/Blog/details/@item.id/@item.title.Trim().Replace(" ","-")">@item.title</a>
                                    </div>
                                }
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Trending News End -->
