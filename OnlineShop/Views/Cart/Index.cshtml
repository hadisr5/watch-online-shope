@section JS{
    <script>
        function UpdateSide() {
            $.ajax({
                type: "POST",
                url: '/cart/SideBar',
                success: function (t) {
                    $('#box-price-total').html(t);
                }
            })
        }
        function loadBasketProducts() {
            $.ajax({
                type: "POST",
                url: '/cart/Products',
                success: function (t) {
                    $('#products').html(t);
                }
            })
        }
        function addProduct(productId, selected) {
            var q = $(selected).parent().parent().parent().parent().find('.quantity');
            var tr = $(selected).parent().parent().parent().parent().find('.totalInRow').find('strong');

            $.ajax({
                type: "POST",
                url: '/cart/addProduct',
                data: { id: productId },
                success: function (t) {
                    UpdateMiniCart();
                    $(q).val(t.quantity)
                    $(tr).html(t.sum + " تومان")
                    $('#SumPrice').text(t.total + ' تومان');
                    $('#Total').text(t.total);
                    fixprice();
                }
            })
        }
        function ReduceProduct(productId, selected) {
            var q = $(selected).parent().parent().parent().parent().find('.quantity');
            var tr = $(selected).parent().parent().parent().parent().find('.totalInRow').find('strong');
            $.ajax({
                type: "POST",
                url: '/cart/ReduceProduct',
                data: { id: productId },
                success: function (t) {
                    UpdateMiniCart();
                    $(q).val(t.quantity)
                    $(tr).html(t.sum + " تومان")
                    $('#SumPrice').text(t.total + ' تومان');
                    $('#Total').text(t.total);
                    fixprice();
                }
            })
        }
   
        $(document).on('click', '.plus', function () {
            addProduct($(this).attr('data-id'), $(this))
        })
        $(document).on('click', '.minus', function () {
            ReduceProduct($(this).attr('data-id'), $(this))
        })
        $(document).ready(function () {
            loadBasketProducts();
        })
     
    
    </script>



