        <script>
            quantity = function (id) {
                var quantity = $('#quantity-item-' + id).val();
                $('#loading').show();
                $.ajaxSetup({
                    headers: {
                        'X-CSRF-TOKEN': $('meta[name="_token"]').attr('content')
                    }
                });
                $.ajax({
                    url: '#',
                    method: "PATCH",
                    data: { 'id': id, 'quantity': quantity },
                    success: function (data) {
                        $('#cart_show').html('');
                        $('#cart_show').html(data);
                        $('#loading').hide();
                    }
                });
            }
        </script>
