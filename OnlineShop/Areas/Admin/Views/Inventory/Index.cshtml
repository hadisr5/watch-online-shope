    $(document).on('keyup', '.touchspin', function () {
        updateInventory($(this).attr('data-id'), $(this).val() )
    })



    function updateInventory(id, val) {
        $.ajax({
            type: "POST",
            url: '/admin/inventory/update/' + id,
            data: { inventory: val },
            success: function (t) {
            }
        })
    }


    $(document).on('change', 'input[data-activeCheck="true"]', function () {
        if ($(this).is(':checked') == true) {
            activeProduct($(this).attr('data-id'), $(this).prop(':checked'));
        } else {
            diActiveProduct($(this).attr('data-id'), $(this).prop(':checked'));
        }
    })
    $(document).on('change', 'input[name="isAvailable"]', function () {
        isAvailable($(this).attr('data-id'), $(this).is(':checked'))
    })

    function isAvailable(id, val) {
        $.ajax({
            type: "POST",
            url: '/admin/inventory/isAvailable/' + id,
            data: { check: val },
            success: function (t) {
            }
        })
    }

    function activeProduct(id , val) {
        $.ajax({
            type: "POST",
            url: '/admin/inventory/Active/' + id,
            data: { check: true , uncheck:false },
            success: function (t) {
            }
        })
    }
    function diActiveProduct(id, val) {
        $.ajax({
            type: "POST",
            url: '/admin/inventory/Active/' + id,
            data: { uncheck: true , check:false },
            success: function (t) {
            }
        })
    }



</script>
