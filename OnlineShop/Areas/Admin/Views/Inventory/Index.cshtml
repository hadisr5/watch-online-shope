        var table = $("#Table").DataTable({

            responsive: !0, searchDelay: 500, processing: !0, serverSide: !0, ajax: "/admin/Products/List",
            columns:
                [
                    {
                        data: "id"
                    },
                    {
                        data: "MainImage",
                        orderable: false,

                        render: function (data, type, row) {
                            if (data == null) {
                                return '<img src="/Template/images/loading.png" alt=""  style="width:70px;border-radius:4px;height: 70px;" />'

                            } else {
                                return '<img data-src="' + "@System.Configuration.ConfigurationManager.AppSettings["uploadwebpath"]" + data + '" src="/Template/images/loading.png" alt=""  style="width:70px;border-radius:4px;height: 70px;" class="lazyload" />'

                            }
                        }
                    },

                    {
                        data: "title",
                        orderable: false
                    },
                    {
                        data: "Inventory",
                        render: function (data, type, row) {
                            return '<div class="form-group row" style="width:320px"><div class="col-md-12"><input   type="text" data-id="' + row.id + '"  class="form-control touchspin" value="' + data + '" name="demo0" placeholder="Select time" /></div></div>'


                        }
                    },
                    {
                        data: "Active",
                        render: function (data, type, row) {
                            if (data == true) {
                                return '<label class="checkbox"><input type="checkbox" data-activeCheck="true" checked="checked" data-id="' + row.id + '"><span></span></label>'

                            } else {
                                return '<label class="checkbox"><input type="checkbox" data-activeCheck="true" data-id="' + row.id + '"><span></span></label>'

                            }
                        }
                    },
                    {
                        data: "isAvailable",
                        render: function (data, type, row) {
                            if (data == true) {
                                return '<span class="switch"><label><input type="checkbox" data-id="' + row.id +'" checked="checked" name="isAvailable" /><span></span></label></span>'

                            } else {
                                return '<span class="switch"><label><input type="checkbox" data-id="' + row.id +'" name="isAvailable" /><span></span></label></span>'

                            }
                        }
                    },
                    {
                        data: "price",
                        render: function (data, type, row) {
                            if (data != null) {
                                return formatPrice(data) + ' تومان'

