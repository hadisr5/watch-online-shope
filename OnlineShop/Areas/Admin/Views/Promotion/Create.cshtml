@{
    ViewBag.Title = "Create";
    Layout = null;

}
<div class="subheader py-2 py-lg-4 subheader-solid" id="kt_subheader">
    <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
        <!--begin::Info-->
        <div class="d-flex align-items-center flex-wrap mr-2">
            <!--begin::Page Title-->
            <h5 class="text-dark font-weight-bold mt-2 mb-2 mr-5">مدیریت پروموشن ها</h5>
            <!--end::Page Title-->
            <!--begin::Actions-->
            <div class="subheader-separator subheader-separator-ver mt-2 mb-2 mr-4 bg-gray-200"></div>
            <a href="#/admin/promotion/index" class="btn btn-light-warning font-weight-bolder btn-sm">لیست پروموشن ها</a>
            <!--end::Actions-->
        </div>
        <!--end::Info-->
        <!--begin::Toolbar-->
        <div class="d-flex align-items-center">
        </div>
        <!--end::Toolbar-->
    </div>
</div>
<!-- end:: Content Head -->
<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
    <div class="row">
        <div class="col-md-12">
            <!--begin::Portlet-->
            <div class="kt-portlet">
                <div class="kt-portlet__head">
                    <div class="kt-portlet__head-label">
                        <h3 class="kt-portlet__head-title">
                            اطلاعات پروموشن
                        </h3>
                    </div>
                </div>
                <!--begin::Form-->
                <form class="kt-form myForm" method="post" action="/admin/promotion/create" data-redirect="/Admin/AdminDashboard/Index#/Admin/promotion/index">
                    <div class="kt-portlet__body">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label>عنوان پروموشن</label>
                            <input type="text" class="form-control" placeholder="عنوان پروموشن" name="title">
                        </div>
                        <div class="form-group">
                            <label>اولویت</label>
                            <input type="text" class="form-control" placeholder="اولویت" name="priority">
                        </div>
                        <div class="form-group">
                            <label>رنگ</label>
                            <input class="form-control" name="color" type="color" id="example-color-input" />
                        </div>
                        <div class="form-group">
                            <label class="col-3 col-form-label">فعال سازی پروموشن</label>
                            <div class="col-3">
                                <span class="checkbox-list">
                                    <label class="checkbox">
                                        <input type="checkbox" checked="checked" name="active" value="True" />
                                        <span></span>
                                    </label>
                                </span>
                            </div>
                        </div>
                        <div class="form-group m-form__group row">
                            <label for="example-text-input" class="col-2 col-form-label">
                                عکس پروموشن
                            </label>
                            <div class="col-lg-4 col-md-9 col-sm-12">
                                <img src="" id="imgPre" style="width: 337px; border-radius: 10px;" />
                                <div class="m-dropzone dropzone" action="/admin/promotion/upload" id="m-dropzone-one">
                                    <div class="m-dropzone__msg dz-message needsclick">
                                        <h3 class="m-dropzone__msg-title">
                                            برای ویرایش عکس ، اینجا کلیک کنید
                                        </h3>
                                        @*<span class="m-dropzone__msg-desc">
                            عکس آپلود شده به عنوان عکس پروفایل کاربر نمایش داده می شود
                        </span>*@
                                    </div>
                                </div>
                                <input type="text" class="hidden" id="img" name="bgImage" style="display:none" value="" />
                            </div>
                        </div>


                    </div>
                    <div class="kt-portlet__foot">
                        <div class="kt-form__actions">
                            <button type="submit" class="btn btn-primary">ایجاد پروموشن</button>
                        </div>
                    </div>
                </form>
                <!--end::Form-->
            </div>
            <!--end::Portlet-->

        </div>

    </div>
</div>

<script>
    titlePage('ایجاد پروموشن')
</script>
<script>
    kamaDatepicker('test-date-id');
    $('.dropzone').dropzone({
        success: function (file, response) {
            $('#img').val(response);
            $('#imgPre').remove();

        }
    });
</script>
<script>

    try {
        $('.kt-menu__item--active').removeClass('kt-menu__item--active')
    } catch (e) {

    }
    $('[data-menu="promotion"]').addClass('kt-menu__item--active')

</script>