@using OnlineShop.Models
@{
    var db = new OnlineShopEntities();
    ViewBag.Title = "Create";
    Layout = null;
}
<!--begin::Subheader-->
<div class="subheader py-2 py-lg-4 subheader-solid" id="kt_subheader">
    <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
        <!--begin::Info-->
        <div class="d-flex align-items-center flex-wrap mr-2">
            <!--begin::Page Title-->
            <h5 class="text-dark font-weight-bold mt-2 mb-2 mr-5">مدیریت یرند ساعت ها</h5>
            <!--end::Page Title-->
            <!--begin::Actions-->
            <div class="subheader-separator subheader-separator-ver mt-2 mb-2 mr-4 bg-gray-200"></div>
            @*<span class="text-muted font-weight-bold mr-4">#XRS-45670</span>*@
        <a href="#/admin/WatchBrand/index" class="btn btn-light-warning font-weight-bolder btn-sm">لیست یرند ساعت ها</a>
            <!--end::Actions-->
        </div>
        <!--end::Info-->
        <!--begin::Toolbar-->
        <div class="d-flex align-items-center">
        </div>
        <!--end::Toolbar-->
    </div>
</div>
<!--end::Subheader-->
<!-- end:: Content Head -->
<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
    <div class="row">
        <div class="col-md-12">
            <!--begin::Portlet-->
            <div class="kt-portlet">
                <div class="kt-portlet__head">
                    <div class="kt-portlet__head-label">
                        <h3 class="kt-portlet__head-title">
                            اطلاعات یرند ساعت جدید
                        </h3>
                    </div>
                </div>
                <!--begin::Form-->
                <form class="kt-form myForm" method="post" action="/admin/WatchBrand/Create_WatchBrands" data-redirect="/Admin/AdminDashboard/Index#/Admin/WatchBrand/index">
                    <div class="kt-portlet__body">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label>عنوان یرند ساعت</label>
                            <input type="text" class="form-control" placeholder="عنوان یرند ساعت" name="Title">
                            <span class="form-text text-muted">یرند ساعت شما با این عنوان نمایش داده می شود </span>
                        </div>
                        <div class="form-group">
                            <label>توضیحات یرند ساعت </label>
                            <input type="text" class="form-control" placeholder="توضیحات یرند ساعت" name="Description">
                            @*<span class="form-text text-muted"> با کلیک بر روی این یرند ساعت به این لینک هدایت می شوید</span>*@
                        </div>
                        


                        <!--<div class="form-group">
                            <label>تاریخ ایجاد</label>
                            <input type="text" class="form-control" placeholder="تاریخ ایجاد" name="CreationDate">-->
                            @*<span class="form-text text-muted"> با کلیک بر روی این یرند ساعت به این لینک هدایت می شوید</span>*@
                        <!--</div>-->
                      
                        <div class="form-group">
                            <label class="col-3 col-form-label">فعال سازی یرند ساعت</label>
                            <div class="col-3">
                                <span class="kt-switch">
                                    <label>
                                        <input type="checkbox" checked="checked" name="active" value="True" />
                                        <span></span>
                                    </label>
                                </span>
                            </div>
                        </div>

                    </div>
                    <div class="kt-portlet__foot">
                        <div class="kt-form__actions">
                            <button type="submit" class="btn btn-primary">ایجاد یرند ساعت جدید</button>
                            <a href="/Admin/AdminDashboard/Index#/Admin/WatchBrand/index" class="btn btn-secondary">انصراف</a>
                        </div>
                    </div>
                </form>
                <!--end::Form-->
            </div>
            <!--end::Portlet-->

        </div>

    </div>
</div>

<script>
    titlePage('ایجاد یرند ساعت جدید')
</script>
<script>
    $('.dropzone').dropzone({
        success: function (file, response) {
            $('#img').val(response)
        }
    });
</script>