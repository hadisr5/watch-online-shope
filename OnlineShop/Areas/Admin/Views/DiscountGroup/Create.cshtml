@using OnlineShop.Models
@{
    var db = new OnlineShopEntities();
    ViewBag.Title = "Create";
    Layout = null;
}
<!--begin::Subheader-->
<div class="subheader py-2 py-lg-4 subheader-solid" id="kt_subheader">
    <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
        <!--begin::Info-->
        <div class="d-flex align-items-center flex-wrap mr-2">
            <!--begin::Page Title-->
            <h5 class="text-dark font-weight-bold mt-2 mb-2 mr-5">مدیریت کد های تخفیف</h5>
            <!--end::Page Title-->
            <!--begin::Actions-->
            <div class="subheader-separator subheader-separator-ver mt-2 mb-2 mr-4 bg-gray-200"></div>
            @*<span class="text-muted font-weight-bold mr-4">#XRS-45670</span>*@
            <a href="#/admin/DiscountGroup/index" class="btn btn-light-warning font-weight-bolder btn-sm">لیست کد های تخفیف</a>
            <!--end::Actions-->
        </div>
        <!--end::Info-->
        <!--begin::Toolbar-->
        <div class="d-flex align-items-center">


        </div>
        <!--end::Toolbar-->
    </div>
</div>
<!--end::Subheader-->
<!-- end:: Content Head -->
<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
    <div class="row">
        <div class="col-md-12">
            <!--begin::Portlet-->
            <div class="kt-portlet">
                <div class="kt-portlet__head">
                    <div class="kt-portlet__head-label">
                        <h3 class="kt-portlet__head-title">
                            اطلاعات منو جدید
                        </h3>
                    </div>
                </div>
                <!--begin::Form-->
                <form class="kt-form myForm" method="post" action="/admin/DiscountGroup/Create" data-redirect="/Admin/AdminDashboard/Index#/Admin/DiscountGroup/index">
                    <div class="kt-portlet__body">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label>تخفیف به عنوان</label>
                            <input type="text" class="form-control" placeholder="تخفیف به عنوان" name="Name">
                        </div>

                        <div class="kt-portlet__body">
                            <ul class="nav nav-tabs" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" data-toggle="tab" href="#" data-target="#kt_tabs_1_1">مبلغ تخفیف</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="tab" href="#kt_tabs_1_3">درصد تخفیف</a>
                                </li>

                            </ul>

                            <div class="tab-content">
                                <div class="tab-pane active" id="kt_tabs_1_1" role="tabpanel">
                                    <div class="form-group">
                                        <label>مبلغ تخفیف</label>
                                        <input type="text" class="form-control priceInput" placeholder="مبلغ تخفیف" name="Amount">
                                        <span class="form-text text-muted"></span>
                                    </div>
                                </div>

                                <div class="tab-pane" id="kt_tabs_1_3" role="tabpanel">
                                    <div class="form-group">
                                        <label>درصد تخفیف</label>
                                        <input type="number" class="form-control" placeholder="درصد تخفیف" name="Percentage">
                                    </div>
                                    <div class="form-group">
                                        <label>سقف تخفیف</label>
                                        <input type="text" class="form-control priceInput" placeholder="سقف تخفیف" name="maxPercentage">
                                        <span class="form-text text-muted"></span>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="form-group">
                            <label>به تعداد</label>
                            <input type="number" class="form-control" placeholder="به تعداد" name="count">
                        </div>
                        <div class="form-group">
                            <label>پیشوند</label>
                            <input type="text" class="form-control" placeholder="پیشوند" name="pre">
                        </div>


                    </div>
                    <div class="kt-portlet__foot">
                        <div class="kt-form__actions">
                            <button type="submit" class="btn btn-primary">ایجاد تخفیف جدید</button>
                            <a href="/Admin/AdminDashboard/Index#/Admin/DiscountGroup/index" class="btn btn-secondary">انصراف</a>
                        </div>
                    </div>
                </form>
                <!--end::Form-->
            </div>
            <!--end::Portlet-->

        </div>

    </div>
</div>

<script>
    titlePage('ایجاد تخفیف جدید')
</script>