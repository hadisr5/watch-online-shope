                        }
                    },
                    {
                        data: "id",
                        orderable: false,
                        render: function (data, type, row) {
                            return '<a href="/sellers/login?id=' + data + '" target="_blank" class="btn btn-bold btn-sm btn-font-sm  btn-label-warning">ورود به پنل کاربری</a>'
