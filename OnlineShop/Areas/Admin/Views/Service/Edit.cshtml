@using OnlineShop.Models
@model OnlineShop.Models.Service
@{
    var db = new OnlineShopEntities();
    int id = Convert.ToInt16(ViewBag.id);
    var Service = db.Services.Find(id);
    ViewBag.Title = "Create";
    Layout = null;
}
<!--begin::Subheader-->
