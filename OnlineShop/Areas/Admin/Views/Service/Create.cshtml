@using OnlineShop.Models
@{
    var db = new OnlineShopEntities();
    ViewBag.Title = "Create";
    Layout = null;
}
<!--begin::Subheader-->
<div class="subheader py-2 py-lg-4 subheader-solid" id="kt_subheader">
    <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
        <!--begin::Info-->
        <div class="d-flex align-items-center flex-wrap mr-2">
            <!--begin::Page Title-->
            <h5 class="text-dark font-weight-bold mt-2 mb-2 mr-5">مدیریت خدمات</h5>
            <!--end::Page Title-->
            <!--begin::Actions-->
            <div class="subheader-separator subheader-separator-ver mt-2 mb-2 mr-4 bg-gray-200"></div>
            @*<span class="text-muted font-weight-bold mr-4">#XRS-45670</span>*@
        <a href="#/admin/service/Index" class="btn btn-light-warning font-weight-bolder btn-sm">لیست خدمات</a>
            <!--end::Actions-->
        </div>
        <!--end::Info-->
        <!--begin::Toolbar-->
        <div class="d-flex align-items-center">
        </div>
        <!--end::Toolbar-->
    </div>
</div>
<!--end::Subheader-->
<!-- end:: Content Head -->
<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
    <div class="row">
        <div class="col-md-12">
            <!--begin::Portlet-->
            <div class="kt-portlet">
                <div class="kt-portlet__head">
                    <div class="kt-portlet__head-label">
                        <h3 class="kt-portlet__head-title">
                            اطلاعات خدمات جدید
                        </h3>
                    </div>
                </div>
                <!--begin::Form-->
                <form class="kt-form myForm" method="post" action="/admin/Service/Create_Services" data-redirect="/Admin/AdminDashboard/Index#/Admin/service/Index">
                    <div class="kt-portlet__body">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label>عنوان خدمات</label>
                            <input type="text" class="form-control" placeholder="عنوان خدمات" name="Title">
                            <span class="form-text text-muted">خدمات شما با این عنوان نمایش داده می شود </span>
                        </div>
                        <div class="form-group">
                            <label>توضیحات خدمات </label>
                            <input type="text" class="form-control" placeholder="توضیحات خدمات" name="Description">
                            @*<span class="form-text text-muted"> با کلیک بر روی این خدمات به این لینک هدایت می شوید</span>*@
                        </div>

                        <div class="form-group">
                            <label>محتوای خدمات</label>
                            <textarea id="mytextarea" name="ServiceContent"></textarea>
                            <span class="form-text text-muted">محتوای خدمات</span>
                        </div>

                        <div class="form-group m-form__group row">
                            <label for="example-text-input" class="col-2 col-form-label">
                                عکس 
                            </label>
                            <div class="col-lg-4 col-md-9 col-sm-12">
                                <div class="m-dropzone dropzone" action="/admin/Service/upload" id="m-dropzone-one">
                                    <div class="m-dropzone__msg dz-message needsclick">
                                        <h3 class="m-dropzone__msg-title">
                                            فایل عکس را اینجا بندازید یا برای آپلود کلیک کنید
                                        </h3>
                        
                                    </div>
                                </div>
                            </div>
                        </div>

                       

                        <!--<div class="form-group">
        <label>تاریخ ایجاد</label>
        <input type="text" class="form-control" placeholder="تاریخ ایجاد" name="CreationDate">-->
                        @*<span class="form-text text-muted"> با کلیک بر روی این خدمات  به این لینک هدایت می شوید</span>*@
                        <!--</div>-->

                        <div class="form-group">
                            <label class="col-3 col-form-label">فعال سازی خدمات </label>
                            <div class="col-3">
                                <span class="kt-switch">
                                    <label>
                                        <input type="checkbox" checked="checked" name="active" value="True" />
                                        <span></span>
                                    </label>
                                </span>
                            </div>
                        </div>

                    </div>
                    <div class="kt-portlet__foot">
                        <div class="kt-form__actions">
                            <button type="submit" class="btn btn-primary">ایجاد خدمات جدید</button>
                            <a href="/Admin/AdminDashboard/Index#/Admin/Service/Index" class="btn btn-secondary">انصراف</a>
                        </div>
                    </div>
                </form>
                <!--end::Form-->
            </div>
            <!--end::Portlet-->

        </div>

    </div>
</div>

<script>
    titlePage('ایجاد خدمات جدید')
</script>
<script>
    $('.dropzone').dropzone({
        success: function (file, response) {
            $('#img').val(response)
        }
    });
</script>