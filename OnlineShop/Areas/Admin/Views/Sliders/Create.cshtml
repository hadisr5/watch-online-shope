@using OnlineShop.Models
@{
    var db = new OnlineShopEntities();
    ViewBag.Title = "Create";
    Layout = null;
}
<!--begin::Subheader-->
<div class="subheader py-2 py-lg-4 subheader-solid" id="kt_subheader">
    <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
        <!--begin::Info-->
        <div class="d-flex align-items-center flex-wrap mr-2">
            <!--begin::Page Title-->
            <h5 class="text-dark font-weight-bold mt-2 mb-2 mr-5">مدیریت اسلایدر ها</h5>
            <!--end::Page Title-->
            <!--begin::Actions-->
            <div class="subheader-separator subheader-separator-ver mt-2 mb-2 mr-4 bg-gray-200"></div>
            @*<span class="text-muted font-weight-bold mr-4">#XRS-45670</span>*@
            <a href="#/admin/sliders/index" class="btn btn-light-warning font-weight-bolder btn-sm">لیست اسلایدر ها</a>
            <!--end::Actions-->
        </div>
        <!--end::Info-->
        <!--begin::Toolbar-->
        <div class="d-flex align-items-center">
        </div>
        <!--end::Toolbar-->
    </div>
</div>
<!--end::Subheader-->
<!-- end:: Content Head -->
<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
    <div class="row">
        <div class="col-md-12">
            <!--begin::Portlet-->
            <div class="kt-portlet">
                <div class="kt-portlet__head">
                    <div class="kt-portlet__head-label">
                        <h3 class="kt-portlet__head-title">
                            اطلاعات اسلایدر جدید
                        </h3>
                    </div>
                </div>
                <!--begin::Form-->
                <form class="kt-form myForm" method="post" action="/admin/sliders/Create_slider" data-redirect="/Admin/AdminDashboard/Index#/Admin/sliders/index">
                    <div class="kt-portlet__body">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label>عنوان اسلایدر</label>
                            <input type="text" class="form-control" placeholder="عنوان اسلایدر" name="title">
                            <span class="form-text text-muted">اسلایدر شما با این عنوان نمایش داده می شود </span>
                        </div>
                        <div class="form-group">
                            <label>متن زیر اسلایدر</label>
                            <input type="text" class="form-control" placeholder="متن زیر اسلایدر" name="subTitle">
                            @*<span class="form-text text-muted"> با کلیک بر روی این اسلایدر به این لینک هدایت می شوید</span>*@
                        </div>
                        <div class="form-group">
                            <label>متن دکمه اسلایدر</label>
                            <input type="text" class="form-control" placeholder="متن دکمه اسلایدر" name="btnText">
                            @*<span class="form-text text-muted"> با کلیک بر روی این اسلایدر به این لینک هدایت می شوید</span>*@
                        </div>
                        <div class="form-group">
                            <label>لینک دکمه اسلایدر</label>
                            <input type="text" class="form-control" placeholder="لینک دکمه اسلایدر" name="btnLink">
                            @*<span class="form-text text-muted"> با کلیک بر روی این اسلایدر به این لینک هدایت می شوید</span>*@
                        </div>
                        <div class="form-group m-form__group row">
                            <label for="example-text-input" class="col-2 col-form-label">
                                عکس اسلایدر
                            </label>
                            <div class="col-lg-4 col-md-9 col-sm-12">
                                <div class="m-dropzone dropzone" action="/admin/sliders/upload" id="m-dropzone-one">
                                    <div class="m-dropzone__msg dz-message needsclick">
                                        <h3 class="m-dropzone__msg-title">
                                            فایل عکس را اینجا بندازید یا برای آپلود کلیک کنید
                                        </h3>
                                        @*<span class="m-dropzone__msg-desc">
                            عکس آپلود شده به عنوان عکس پروفایل کاربر نمایش داده می شود
                        </span>*@
                                    </div>
                                </div>
                                <input type="text" class="hidden" id="img" name="img" style="display:none" value="" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-3 col-form-label">فعال سازی اسلایدر</label>
                            <div class="col-3">
                                <span class="kt-switch">
                                    <label>
                                        <input type="checkbox" checked="checked" name="active" value="True" />
                                        <span></span>
                                    </label>
                                </span>
                            </div>
                        </div>

                    </div>
                    <div class="kt-portlet__foot">
                        <div class="kt-form__actions">
                            <button type="submit" class="btn btn-primary">ایجاد اسلایدر جدید</button>
                            <a href="/Admin/AdminDashboard/Index#/Admin/sliders/index" class="btn btn-secondary">انصراف</a>
                        </div>
                    </div>
                </form>
                <!--end::Form-->
            </div>
            <!--end::Portlet-->

        </div>

    </div>
</div>

<script>
    titlePage('ایجاد اسلایدر جدید')
</script>
<script>
    $('.dropzone').dropzone({
        success: function (file, response) {
            $('#img').val(response)
        }
    });
</script>