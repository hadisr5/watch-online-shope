
@{
    ViewBag.Title = "Upload";
    Layout = null;
}
<div class="col-lg-12 col-md-12 col-sm-12">
    <div class="m-dropzone dropzone" action="/admin/fileManager/uploader?pth=@ViewBag.path" id="m-dropzone-one">
        <div class="m-dropzone__msg dz-message needsclick">
            <h3 class="m-dropzone__msg-title">
                فایل را اینجا بندازید یا برای انتخاب فایل کلیک کنید
            </h3>
        </div>
    </div>
    <input type="text" class="hidden" id="img" name="img" style="display:none" value="" />
</div>
<script>
    $('.dropzone').dropzone({
        success: function (file, response) {
            $('#img').val(response)
            hashChange();
        }
    });
</script>
