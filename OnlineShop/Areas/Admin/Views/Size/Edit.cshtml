<!-- end:: Content Head -->
<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
    <div class="row">
        <div class="col-md-12">
            <!--begin::Portlet-->
            <div class="kt-portlet">
                <div class="kt-portlet__head">
                    <div class="kt-portlet__head-label">
                        <h3 class="kt-portlet__head-title">
                            ویرایش سایز
                        </h3>
                    </div>
                </div>
                <!--begin::Form-->
                <form class="kt-form myForm" method="post" action="/admin/Size/Edit_Post" data-redirect="/Admin/AdminDashboard/Index#/Admin/Size/index">
                    <div class="kt-portlet__body">
                        @Html.AntiForgeryToken()
                        <input type="number" style="display:none" value="@id" name="id" />
                        <div class="form-group">
                            <label>عنوان سایز</label>
                            <input type="text" class="form-control" value="@size.title" placeholder="عنوان سایز" name="title">
                            <span class="form-text text-muted">سایز شما با این عنوان نمایش داده می شود </span>
                        </div>
                        <div class="form-group">
                            <label>سایز</label>
                            <input type="text" class="form-control" placeholder="سایز" value="@size.Size1" name="Size1">
                        </div>

                        <div class="form-group">
                            <label>اولویت سایز</label>
                            <input type="number" class="form-control" placeholder="اولویت" name="Priority" value="@size.Priority">
                            <span class="form-text text-muted">سایز ها به ترتیب اولویت نمایش داده می شوند </span>
                        </div>

                    </div>
                    <div class="kt-portlet__foot">
                        <div class="kt-form__actions">
                            <button type="submit" class="btn btn-primary">ویرایش سایز</button>
                            <a href="/Admin/AdminDashboard/Index#/Admin/Size/index" class="btn btn-secondary">انصراف</a>
                        </div>
                    </div>
                </form>
                <!--end::Form-->
            </div>
            <!--end::Portlet-->

        </div>

    </div>
</div>

<script>
    titlePage('ایجاد سایز جدید')
</script>