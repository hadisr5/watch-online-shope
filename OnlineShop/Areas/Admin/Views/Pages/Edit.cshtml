<script>
    titlePage('ویرایش صفحه')
</script>

<script type="text/javascript">
        tinymce.remove('#mytextarea');
        TinymceInitial('#mytextarea');
</script>
<script>
    $('.dropzone').dropzone({
        success: function (file, response) {
            $('#img').val(response);
            $('#imgPre').remove();

        }
    });
</script>