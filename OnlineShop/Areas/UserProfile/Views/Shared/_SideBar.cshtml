@using OnlineShop.Models
@{
    var db = new OnlineShopEntities();
    int id = Convert.ToInt16(Session["userLogin"]);
    var user = db.Users.Find(id);
    Layout = null;
}
<div class="profile-page-aside col-xl-3 col-lg-4 col-md-6 center-section order-1 sticky-sidebar">
    <div class="profile-box">
        <div class="profile-box-header">
            <div class="profile-box-avatar">
                <img src="/Template/images/user.svg" alt="">
            </div>
        </div>
        <div class="profile-box-username">
            @{
                if (user.firstName == null || user.lastName == null)
                {
                    @user.mobile
                }
                else
                {
                    @user.firstName @user.lastName
                }
            }
        </div>
        <div class="profile-box-tabs">
            <a href="/userProfile/profile/changePassword" class="profile-box-tab profile-box-tab-access">
                <i class="now-ui-icons ui-1_lock-circle-open"></i>
                تغییر رمز
            </a>
            <a href="/userLogin/Main/logout" class="profile-box-tab profile-box-tab--sign-out">
                <i class="now-ui-icons media-1_button-power"></i>
                خروج از حساب
            </a>
        </div>
    </div>
    <div class="profile-menu">
        <div class="profile-menu-header">حساب کاربری شما</div>
        <ul class="profile-menu-items">
            <li data-menu="profile">
                <a href="/userProfile/profile/index">
                    <i class="now-ui-icons users_single-02"></i>
                    پروفایل
                </a>
            </li>
            <li data-menu="orders">
                <a href="/userProfile/profile/Orders">
                    <i class="now-ui-icons shopping_basket"></i>
                    همه سفارش ها
                </a>
            </li>
            <li data-menu="tickets">
                <a href="/userProfile/profile/tickets">
                    <i class="now-ui-icons shopping_basket"></i>
                    تیکت ها
                </a>
            </li>
            <li data-menu="wallet">
                <a href="/userProfile/profile/wallet">
                    <i class="now-ui-icons shopping_credit-card"></i>
                    کیف پول
                </a>
            </li>

            <li data-menu="favorite">
                <a href="/userProfile/profile/favorites">
                    <i class="now-ui-icons ui-2_favourite-28"></i>
                    لیست علاقمندی ها
                </a>
            </li>
            @*<li>
            <a href="#">
                <i class="fa fa-map-marker"></i>
                آدرس ها
            </a>
        </li>*@
            <li data-menu="Comments">
                <a href="/UserProfile/profile/Comments">
                    <i class="fa fa-quote-right"></i>
                    نقد و نظرات
                </a>
            </li>
            <li data-menu="recentViews">
                <a href="RecentViews">
                    <i class="now-ui-icons ui-1_calendar-60"></i>
                    بازدید های اخیر من
                </a>
            </li>
            @*<li>
            <a href="#">
                <i class="now-ui-icons business_badge"></i>
                اطلاعات شخصی
            </a>
        </li>*@
        </ul>
    </div>
</div>


